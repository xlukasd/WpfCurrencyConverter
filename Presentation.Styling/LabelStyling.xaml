<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:markup="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CurrencyLabelStyle" TargetType="{markup:Type Label}">
        <Setter Property="Margin" Value="3,3,3,0" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="ResultLabelStyle" TargetType="{markup:Type Label}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Foreground" Value="White" />
    </Style>
</ResourceDictionary>